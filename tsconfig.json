{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.ts", // ✅ CORRECCIÓ: Assegurem que llegeixi el nostre fitxer global.d.ts
    "tailwind.config.js",
    "src/components/ui/toggle.jsx"
, "src/config/styles"  ],
  "exclude": [
    "node_modules",
    "supabase" // ✅ AFEGEIX AQUESTA LÍNIA

  ]
}